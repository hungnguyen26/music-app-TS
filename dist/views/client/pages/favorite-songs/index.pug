extends ../../layout/default.pug
include ../../mixins/box-head.pug

block main
    .containner.my-3 
        .row
            .col-12 
                +box-head(pageTitle)

        .row 
            each item in favoriteSongs
                .col-4.mb-3
                    div(class="song-item")
                        div(class="inner-img")
                            a(href=`/songs/detail/${item.infoSong.slug}`)
                                img(src=item.infoSong.avatar)
                        div(class="inner-content")
                            div(class="inner-title")
                                a(href=`/songs/detail/${item.infoSong.slug}`) #{item.infoSong.title}
                            div(class="inner-singer") <i class="fa-solid fa-microphone-lines"></i> #{item.infoSinger.fullName}
                            div(class="inner-heart active" btn-favorite=item.songId)  <i class="fa-regular fa-heart"></i> Yêu thích
                            div(class="inner-time") <i class="fa-regular fa-clock"></i>  Hôm nay 
