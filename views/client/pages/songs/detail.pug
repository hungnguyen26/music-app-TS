extends ../../layout/default.pug
include ../../mixins/box-head.pug

block main
    .singer-detail 
        .containner.my-3 
            .row
                .col-12 
                    .inner-tile #{song.title}

                    .inner-actions
                        div(class="inner-action inner-time")
                            <i class="fa-regular fa-clock"></i> 20/10/2024
                        div(class="inner-action inner-singer")
                            <i class="fa-solid fa-microphone-lines"></i> #{singer.fullName}
                        div(class="inner-action inner-topic")
                            <i class="fa-solid fa-music"></i> #{topic.title}
                        div(class="inner-action inner-like" btn-like=song.id)
                            <i class="fa-regular fa-thumbs-up"></i>
                            span #{song.like} thích
                        div(class=("inner-action inner-heart " + (song.isFavoriteSong ? "active" : "")) btn-favorite=song.id)
                            <i class="fa-solid fa-heart"></i> Bài hát yêu thích

                    .inner-play
                        .inner-avatar
                            img(src=song.avatar)
                        .inner-audio
                            //- audio(controls)
                            //-     source(src="https://backend.daca.vn/assets/audios/cat-doi-noi-sau.mp3" )
                            div(id="aplayer" data-song=song data-singer=singer)
                    .inner-desc
                        .inner-label Mô tả
                        .inner-text
                            | #{song.description}
                    
                    .inner-desc
                        .inner-label Lời bài hát
                        .inner-text
                            #{song.lyrics}